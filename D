    <script>
        function nextStep(stepId) {
            const currentStep = document.querySelector('.question-box:not(.hidden)');
            currentStep.classList.add('hidden');
            document.getElementById(stepId).classList.remove('hidden');
        }

        function reset() {
            alert("Que pena! Vamos tentar novamente? ðŸ˜Š");
            const steps = document.querySelectorAll('.question-box, #balloons, #result');
            steps.forEach(step => step.classList.add('hidden'));
            document.getElementById('step1').classList.remove('hidden');
        }

        function showPrize(prize) {
            document.getElementById('balloons').classList.add('hidden');
            document.getElementById('result').classList.remove('hidden');
            document.getElementById('prizeMessage').textContent = prize;
        }
    </script>
